@model Shop.Models.Forms.SetPasswordForm
@{
    ViewData["Title"] = "ActivateAccountPassword";
}

<h1>ActivateAccountPassword</h1>


<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ActivateAccountPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="ComfirmPassword"  class="control-label"></label>
                <input asp-for="ComfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ComfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                
                <input asp-for="Token" style="display:none;" class="form-control" />
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
            
             
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
