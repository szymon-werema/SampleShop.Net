@model Shop.Models.Forms.AccountForm

@{
    ViewData["Title"] = "MyAccount";
}

<h1 style="text-align:center;">Your Account</h1>
<hr style="width:50%;margin:auto;"/>
<div class="row justify-content-center">
    <div class="col-md-4 mt-3 mb-3 ">
        <form asp-action="ChangeData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="User.Password"  class="form-control d-none" />
            <input asp-for="User.UserRoleId" class="form-control d-none" />
            <input asp-for="User.Address"  class="form-control d-none" />
            <div class="form-group mt-3 mb-3">
                <label asp-for="User.FristName" class="control-label"> Frist name</label>
                <input asp-for="User.FristName" id="FristName" class="form-control" />
                <span asp-validation-for="User.FristName" class="text-danger"></span> 
            </div>
            <div class="form-group mt-3 mb-3 ">
                <label asp-for="User.LastName" class="control-label">Last name</label>
                 
                    <input asp-for="User.LastName" id="LastName" class="form-control" />
                     
                
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3 mb-3">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" type="text" readonly  class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3 mb-3">
                <label asp-for="User.PhoneNumber" class="control-label">Phone number</label>
               
                    <input asp-for="User.PhoneNumber" type="tel" pattern="[0-9]{3}[0-9]{2}[0-9]{3}"  id="Phone Number" class="form-control" />
                    
               
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <button class="btn btn-outline-secondary" type="submit">Save</button>
        
        </form>

            

    </div>
    
</div>
<h1 style="text-align:center;" class="mt-5">Your Address</h1>
<hr style="width:50%;margin:auto;"/>
<div class="row justify-content-center">
    <div class="col-md-4 mt-3 mb-3 ">
<form asp-action="SetAddress">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Address.HouseNumber" class="control-label"></label>
                <input asp-for="Address.HouseNumber" class="form-control" />
                <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Address.ApartamentNumber" class="control-label"></label>
                <input asp-for="Address.ApartamentNumber" class="form-control" />
                
                <span asp-validation-for="Address.ApartamentNumber" class="text-danger"></span>
            </div>
            <div class="d-none">
                <input asp-for="User.Password"  class="form-control d-none" />
                <input asp-for="User.UserRoleId" class="form-control d-none" />
                
                <input asp-for="User.Address"  class="form-control d-none" />
                <div class="form-group mt-3 mb-3">
                    <label asp-for="User.FristName" class="control-label"> Frist name</label>
                    <input asp-for="User.FristName" id="FristName" class="form-control" />
                    <span asp-validation-for="User.FristName" class="text-danger"></span> 
                </div>
                <div class="form-group mt-3 mb-3 ">
                    <label asp-for="User.LastName" class="control-label">Last name</label>
                 
                        <input asp-for="User.LastName" id="LastName" class="form-control" />
                     
                
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
            
                <div class="form-group mt-3 mb-3">
                    <label asp-for="User.Email" class="control-label"></label>
                    <input asp-for="User.Email" type="text" readonly  class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
            
                <div class="form-group mt-3 mb-3">
                    <label asp-for="User.PhoneNumber" class="control-label">Phone number</label>
               
                        <input asp-for="User.PhoneNumber" type="tel" pattern="[0-9]{3}[0-9]{2}[0-9]{3}"  id="Phone Number" class="form-control" />
                    
               
                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
            </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}