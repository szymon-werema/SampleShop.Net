@model Shop.Models.Forms.AddUserForm;

@{
    ViewData["Title"] = "AddUser";
}

<h1  style="text-align:center;">Add user</h1>


<hr style="width:50%;margin: auto;" />
<div class="row justify-content-center mt-3 mb-3">
    <div class="col-md-4  mt-3 mb-3">
       
           
            <div class="form-group  mt-3 mb-3">
                <label asp-for="FristName" class="control-label"></label>
                <input asp-for="FristName" class="form-control" />
                <span asp-validation-for="FristName" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3 mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3 mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="PhoneNumber"  class="control-label">Phone number</label>
                <input asp-for="PhoneNumber" type="tel"  pattern="[0-9]{3}[0-9]{2}[0-9]{3}" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>  
            
            <div class="form-group  mt-3 mb-3">
                <label asp-for="UserRoleId" class="control-label"></label>
                <select asp-for="UserRoleId" class ="form-control" asp-items="ViewBag.UserRoleId">

                </select>
            </div>
            
            
       
    </div>
</div>


<div style="width:50%;margin: auto;" class="mt-3">
    <a asp-controller="Home"  asp-action="Index">Back to home</a>
</div>