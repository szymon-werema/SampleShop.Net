@model List<Shop.Entities.ItemOrder>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Order
            </th>
            <th>
                Item
            </th>
            <th>
                Ordered from user 
            </th>
            <th>
                Ordered
            </th>
            <th>
                State
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.User.FristName)
                        @Html.DisplayFor(modelItem => item.Item.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ordered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.StateOrder.Name)
                    </td>
                    <td>

                        <a asp-action="Item" asp-route-id="@item.Item.Id">Details</a> |

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
