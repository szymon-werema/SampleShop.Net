<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                    @if(!User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item mr-4 p-1 rounded-circle">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">
                                <i class="fa-solid fa-arrow-right-to-bracket fa-xl"></i>
                                </a>
                        </li>
                         
                        <li class="nav-item mr-4 p-1 rounded-circle">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Register">
                                <i class="fa-solid fa-user-plus fa-xl"></i>
                            </a>
                        </li>
                        
                    }else
                    {
                        <li class="nav-item mr-4 p-1 rounded-circle">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Additem">
                                <i class="fa-solid fa-plus fa-xl"></i>
                            </a>
                        </li>
                        
                        <li class="nav-item rounded-circle">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Bucket">
                               <i class="fa-solid fa-basket-shopping fa-xl"></i>
                             </a>
                        </li>
                        <li class="nav-item rounded-circle">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="MyAccount">
                               <i class="fa-solid fa-user fa-xl"></i>
                            </a>
                        </li>
                        <li class="nav-item rounded-circle">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="LogOut">
                                <i class="fa-solid fa-arrow-right-from-bracket fa-xl"></i>
                                </a>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid m-0 p-0 ">
        <div class="row m-0 p-0 ">
            <div class="col-1"></div>
            <div class="col-10 h-100 ">@RenderBody()</div>
            <div class="col-1"></div>

        </div>
        
        
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
